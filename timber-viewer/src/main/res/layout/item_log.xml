<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/log_type"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:background="@color/icon_green"
        android:textFontWeight="700"
        android:textAlignment="center"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/log_message"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/log_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/log_type"
        app:layout_constraintBottom_toBottomOf="@+id/log_type"
        app:layout_constraintTop_toTopOf="@+id/log_type" />

    <TextView
        android:id="@+id/log_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/log_time"
        app:layout_constraintBottom_toBottomOf="@+id/log_type"
        app:layout_constraintTop_toTopOf="@+id/log_type" />

    <TextView
        android:id="@+id/log_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_type" />

</androidx.constraintlayout.widget.ConstraintLayout>